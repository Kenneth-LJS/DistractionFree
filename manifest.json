{
  "name": "Distraction Free Mode for Google Docs",
  "description" : "Adds a toolbar icon (â–£) in Google Docs that turns on distraction free mode. It hides away all controls and buttons and lets you focus on the writing.",
  "version": "1.0",
  "icons": {
    "16": "img/icon-16.png",
    "19": "img/icon-19.png",
    "38": "img/icon-38.png",
    "48": "img/icon-48.png",
    "128": "img/icon-128.png",
    "256": "img/icon-256.png"
  },
  "manifest_version": 2,
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://docs.google.com/*"
      ],
      "js": [
        "contentscript.js"
      ]
    }
  ]
}